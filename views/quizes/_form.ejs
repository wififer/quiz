<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"><br>

<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"><br>

<label for="tema" class="rem">Tema:</label>
<select id="tema" name="quiz[tema]">
<% var temas = ['Otro', 'Humanidades', 'Ocio', 'Ciencia', 'Tecnologia']; for (var i = 0; i < temas.length; i++) { %>
  <% if (temas[i] === quiz.tema) { %>
  <option value="<%= temas[i] %>" selected><%= temas[i] %></option>
  <% } else { %>
  <option value="<%= temas[i] %>"><%= temas[i] %></option>
  <% } %>
<% } %>
</select><br>

